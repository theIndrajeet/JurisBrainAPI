# JurisBrain Legal Knowledge API - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Google AI API Key (Required for embedding generation)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Path to ChromaDB database directory
DB_PATH=legal_db

# ChromaDB collection name
COLLECTION_NAME=law_books

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port
PORT=8000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable/disable CORS (true/false)
ENABLE_CORS=true

# Maximum request size in MB
MAX_REQUEST_SIZE=10

# API rate limiting (requests per minute)
RATE_LIMIT=100

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Set to 'production' in production environment
ENVIRONMENT=development

# Secret key for session management (generate a secure random string)
SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=*

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Enable API usage analytics (true/false)
ENABLE_ANALYTICS=false

# Analytics service endpoint (if using external analytics)
ANALYTICS_ENDPOINT=

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use strong, unique secret keys in production
# 4. Consider using a key management service in production
# 5. Set appropriate CORS origins in production (don't use *)
